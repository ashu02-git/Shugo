<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 ">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, style: "margin-top:10px;" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", size: "30px"  %>
        </div>

        <div class="field">
          <%= f.label :email, style: "margin-top:10px;" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30px" %>
        </div>

        <div class="field">
          <%= f.label :password, style: "margin-top:10px;" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上 )</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", size: "30px" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Password ( 確認用 )", style: "margin-top:10px;" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "30px" %><br />
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-primary", style: "margin-top:15px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
