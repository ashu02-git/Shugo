<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <h4><%= @post.title %></h4>
      <p><%= attachment_image_tag @post, :image, class: "post_image_show" %></p>

      <p>
        投稿者:
        <%= link_to user_path(@post.user.id) do %>
          <%= attachment_image_tag @post.user, :profile_image, class: "post_profile_icon", fallback: "shugo_logo.png" %>
          <%= @post.user.name %>
        <% end %>
      </p>
      <!-- id="star"がraty.jsの発火ポイント -->
      <p>評価: <span id="star"></span></p>
      <p>説明:</p>
      <p><%= render_with_hashtags(@post.body) %></p>
      <% if user_signed_in? && @post.user.id == current_user.id  %>
        <p><%= link_to '編集', edit_post_path %> <%= link_to '削除', post_path, method: :delete, data: { confirm: '削除しますか？' } %></p>
      <% end %>
      <!--いいねの保存と削除分岐-->
      <div id="favo_btn_<%= @post.id %>">
        <%= render 'favorites/favorite', post: @post %>
      </div>
      <!--コメント一覧-->
      <div class="comments">
        <p>コメント件数：<%= @post.post_comments.count %></p>
        <% @post.post_comments.each do |post_comment| %>
          <%= post_comment.comment %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %>
          <%= post_comment.user.name %>
          <% if user_signed_in? && post_comment.user == current_user %>
            <div class="comment-delete">
              <%= link_to '削除', post_post_comment_path(post_comment.post, post_comment), method: :delete, data: { confirm: '削除しますか？' } %>
            </div>
          <% end %>
          <br />
        <% end %>
      </div>
      <!--コメント入力欄-->
      <div class="new-comment">
        <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
          <%= f.text_area :comment, size: "40x2", placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>

      <p><%= link_to '一覧へ戻る', posts_path %></p>

      <!--評価欄表示（読み込みのみ）のJavaScript-->
      <script>
        $('#star').raty({
          size: 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          readOnly: true,
          score: <%= @post.rate %>
        });
      </script>
    </div>
  </div>
</div>