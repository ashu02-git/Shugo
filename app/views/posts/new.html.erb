<h2>新規投稿</h2>
<%= form_with model:@post, url: posts_path, method: :post, local: true do |f| %>
  <%= f.label '画像'%>
  <%= f.attachment_field :image %><br />
  <%= f.label 'タイトル' %>
  <%= f.text_field :title %><br />
  <%= f.label 'カテゴリ' %>
  <%= f.collection_select :category_id, Category.all, :id, :name %><br />
  <%= f.label '評価' %><br />
  <%= f.label '説明' %>
  <%= f.text_area :body %><br />
  <%= f.submit '投稿する'%>
<% end %>