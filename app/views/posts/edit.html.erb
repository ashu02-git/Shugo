<h2>投稿編集画面</h2>
<%= form_with model:@post, url: post_path, local: true do |f| %>
  <%= f.label '画像'%>
  <%= f.attachment_field :image %><br />
  <%= f.label 'タイトル' %>
  <%= f.text_field :title %><br />
  <%= f.label 'カテゴリ' %>
  <%= f.collection_select :category_id, Category.all, :id, :name %><br />
  <%= f.label '評価' %><br />
  <%= f.label '説明' %>
  <%= f.text_area :body %><br />
  <%= f.submit '編集内容を保存'%>
<% end %>
<p></p>
